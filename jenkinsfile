pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18.17.1-alpine3.18'
                }
            }
            steps {
                sh 'python -m py_compile main.py'
                stash(name: 'compiled-results', includes: '*.py*')
            }
        }
    }
}